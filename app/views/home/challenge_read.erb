<body>
<div class="outer-wrapper">
   <%= render partial: "head"%>
   <br>
<a href="/challenge_list" style="margin-left:40px;" button type="button" class="btn btn-default btn-lg">
<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> 목록으로 가기</a></button>
      

<div class="container">
   <div class="post-media" style="text-align:center;">
                  <% unless @challenge.pic.nil? %>
                  <video src="<%= @challenge.pic %>" width="800" height="375" controls>
                  <% end %>
      </div><br><br>
                     
         <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
               <div class="blog-single">
                  <article class="blogpost">
                       조회수 :<%= @challenge.ip_address %><span class= "glyphicon glyphicon-eye-open"></span>
                       <h2 class="post-title"><%= @challenge.title %></h2>

                     <!-- Media Gallery -->

                     <div class="space5"></div>
                     <blockquote class="style1">
                     <small><b>Author Name</b></small>
                        <p><%= @challenge.introduce %></p>
                        <h3>사용한 제품</h3>
                        <p><%= @challenge.content %></p>                  
                     </blockquote>
                     
                                 <div class="panel-group" id="accordion-e1">
                  <div class="panel panel-default">
                     <div class="panel-heading">
                        <h4 class="panel-title">
                           <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-e1" href="#collapseOne">
                           댓글 숨기기/보기
                           <span class="fa fa-chevron-down"></span>
                           </a>
                        </h4>
                     </div>
                     <div id="collapseOne" class="panel-collapse collapse in">
                        <div class="panel-body">
                           <div class="row">
                        <h4 class="uppercase space5">댓글 쓰기</h4>
               <form method="post" action="/home/reply_write" id="form" role="form" class="form">
                  <input type="hidden" value="<%= @challenge.id%>" name="id_of_challenge">
                  <div class="row">
                  <div class="space20">
                     <textarea name="content" id="text" class="input-md form-control" rows="2" placeholder="댓글을 입력해 주세요" maxlength="400"></textarea>
                  </div>
                  <button type="submit" class="button btn-small">
                  게시
                  </button>
               </form>
                              <h5><ul class="comment-list">
                     <% @challenge.replies.each do |r| %>
                          <table class="table table-condensed">
                        <span><em><%= r.created_at.in_time_zone("Asia/Seoul").strftime("%Y년 %m월 %d일 %H시%M분") %></em></span>
                        <p><%= r.content %></p>
                     </table>
             <% end %>
                  </ul></h5>
                  
<a href="/challenge_destroy/<%= @challenge.id %>" style="margin-top:40px; margin-left:450px;" button type="button" class="btn btn-default btn-lg">
<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 게시물 삭제</a></button>
      
<a href="/challenge_update_view/<%= @challenge.id %>" style="margin-top:40px" button type="button" class="btn btn-default btn-lg">
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 게시물 수정</a></button>


                           </div>
                        </div>
                     </div>
                  </div>
      </div></div></div></div></div>
   
   </div>
   </div>

<%= render partial: "down" %>                  
</body>