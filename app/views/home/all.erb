<body>
<div class="outer-wrapper">
    <%= render partial: "head" %>
    <div class="inner-content no-padding">

      <section id="portfolio-section">
         <div class="container">
            <div id="portfolio-home" class="isotope home-project-3col">
               <div class="project-item illustration print">
                  <div class="project-gal">
                  
                      
                       <% @every_youtubecreator.each do |youtube| %>
                       <div style="margin-left:70px;">
                       <div style="width:120px;height:120px;">
                          <form style="margin-top:40px;" action="/home/youtubelist/<%=youtube.id%>" method="POST">
                               <input type="hidden" value="<%=youtube.name%>" name="youtubename">
                               <button type="submit" class="btn btn-default">Submit</button>
                                 <img class="img-circle" src="<%=youtube.imagesrc%>" title="<%=youtube.name%>" alt="<%=youtube.content%>"> 
                            </form>
                          <div style="margin-left:180px;"><textarea style="border:0" rows="5" cols="100"><%=youtube.content%></textarea> </div>
                          </div>
                        <div class="project-info">
                        <br>
                     <h2><%=youtube.name%></h2>
                      </div>
                            </div>
                      <% end %>
                   </div>
                   </div>    
               </div>
            </div>
      </section>

      <div class="space90"></div>

   </div>













	<div class="space50"></div>
</div>
