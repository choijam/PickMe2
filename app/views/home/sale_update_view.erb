<div class="outer-wrapper">
   <%= render partial: "header"%>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <p><a href="/sale_list">세일 리스트</a></p>>
    </div>
    <div class="col-sm-8 text-left"> 
      
      <h1>게시글 수정하기</h1>
      <div class="container" style="margin-top:50px">
          <h1>게시판</h1>
          <form action="/sale_update/<%= @one_post.id %>" method="POST">
            <div class="form-group">
              
              <label for="exampleInputEmail1">제목</label>
            <textarea name="content" class="form-control" rows="1" id="comment"><%= @one_post.writer %></textarea>
           
              
              <label for="exampleInputEmail1">리스트 이미지 주소</label>
              <input type="text" name="title" value="<%= @one_post.title%>" class="form-control" id="exampleInputEmail1" placeholder="제목">
            </div>
            
            <label for="exampleInputEmail1">내용이미지 주소</label>
            <textarea name="content" class="form-control" rows="5" id="comment"><%= @one_post.content %></textarea>
            
            <label for="exampleInputEmail1">관련사이트 주소</label>
            <textarea name="yourl" class="form-control" rows="1" id="comment"><%= @one_post.yourl %></textarea>
      
            
            <button type="전송" class="btn btn-default" style="margin-top:20px;">Submit</button>
          </form>
      </div>
    </div>
  </body>